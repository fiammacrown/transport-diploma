<Window x:Class="Abeslamidze_Kursovaya7.CreateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Abeslamidze_Kursovaya7"
        mc:Ignorable="d"
        Title="Новый пользователь" Height="280" Width="305">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />

        </Grid.RowDefinitions>
        <Label Content="Логин"  FontSize="16"  Grid.Row="0" Grid.Column="0" />
        <TextBox  Grid.Row="0" Grid.Column="1" Text="{Binding Username, Mode=TwoWay, ValidatesOnDataErrors=True }" />
        <Label Content="Пароль"  FontSize="16"  Grid.Row="1" Grid.Column="0" />
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Password,  Mode=TwoWay, ValidatesOnDataErrors=True }"/>

        <Button Grid.Row="2" Grid.Column="0" Content="Сохранить" Command="{Binding SaveCommand}" />
        <Button Grid.Row="2" Grid.Column="1" Content="Отмена" Command="{Binding CancelCommand}" />
    </Grid>
</Window>
