<Window x:Class="Abeslamidze_Kursovaya7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Abeslamidze_Kursovaya7"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1050" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock FontSize="24" FontWeight="Bold" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">Меню</TextBlock>
        <TextBlock FontSize="24" FontWeight="Bold" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">Грузоперевозки</TextBlock>
        <Button FontSize="12" FontWeight="Bold" Grid.Row="1" Grid.Column="0" Click="Button_Click">Зарегистрировать заявку</Button>
        <Button x:Name="Button_Dispatch" FontSize="12" FontWeight="Bold" Grid.Row="2" Grid.Column="0" Click="Button_Click_1" IsEnabled="False">Распределить заявки</Button>
        <TextBlock FontSize="24" FontWeight="Bold" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">Отчеты</TextBlock>
        <Button FontSize="12" FontWeight="Bold" Grid.Row="4" Grid.Column="0">Очередь заявок</Button>
        <Button FontSize="12" FontWeight="Bold" Grid.Row="5" Grid.Column="0">Свободный транспорт</Button>
        <TextBlock FontSize="24" FontWeight="Bold" Grid.Row="7" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">Диаграммы</TextBlock>
        <Button FontSize="12" FontWeight="Bold" Grid.Row="8" Grid.Column="0">Количество грузоперевозок по месяцам</Button>
        <Button FontSize="12" FontWeight="Bold" Grid.Row="9" Grid.Column="0">Объем грузоперевозок по месяцам</Button>
        <DataGrid Grid.Row="1" Grid.Column="1" Grid.RowSpan="9" ItemsSource="{Binding Orders}" AutoGenerateColumns="True" IsReadOnly="True" RowHeaderWidth="50">
            <!--<DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
            </DataGrid.Columns>-->
        </DataGrid>
    </Grid>
</Window>
